<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>
        </h1>
    </div>

    <div class="box">
        <% for (let index = 0; index < newListItem.length; index++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newListItem[index].name %>
                </p>
                <form class="delete-form item" action="/delete" method="post">
                    <input type="hidden" name="itemId" value="<%= newListItem[index].id %>">
                    <button type="submit">X</button>
                </form>
            </div>
        <% } %>

        <form class="item" action="/" method="post" onsubmit="return validateForm()">
            <input type="text" name="newItem" id="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

    <script>
        function validateForm() {
            const input = document.getElementById("newItem").value;
            if (input === null || input.trim() === "") {
                alert("Please enter a valid input.");
                return false;
            }
            return true;
        }
    </script>

</body>

</html>
